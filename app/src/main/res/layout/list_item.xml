<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/anaCardView"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginLeft="5dp"
  android:layout_marginRight="5dp"
  android:layout_marginTop="5dp"
  app:cardCornerRadius="5dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/imgManzara"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:src="@drawable/cart" />


    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">

      <TextView
        android:id="@+id/txtManzaraBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:text="Manzara resmi"
        android:textSize="18sp"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/txtManzaraDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="Manzara resmi"
        android:textSize="14sp"
        android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/imgSil"
        android:tint="@color/colorAccent"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="7dp"
        android:src="@drawable/flag" />

      <ImageView
        android:id="@+id/imgKopyala"
        android:tint="@color/colorPrimary"
        android:layout_margin="7dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/carticon" />

    </LinearLayout>

  </LinearLayout>

</android.support.v7.widget.CardView>
